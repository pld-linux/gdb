+/* Execute PTRACE_TRACEME with error checking.  */
+
+static void
+linux_traceme (const char *program)
+{
+  int save_errno;
+
+  errno = 0;
+  if (ptrace (PTRACE_TRACEME, 0, NULL, NULL) == 0)
+    return;
+
+  save_errno = errno;
+  linux_ptrace_create_warnings ();
+  fprintf (stderr, _("Cannot trace created process %s: %s.\n"), program,
+	   strerror (save_errno));
+  fflush (stderr);
+  _exit (0177);
+}
